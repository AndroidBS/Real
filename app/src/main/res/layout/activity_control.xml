<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.idp100.real.Control"
    android:background="#5fc5d2"
    android:gravity="center"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/linearLayout1"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/control"
            android:layout_width="129dp"
            android:layout_height="120dp"
            android:src="@drawable/cont" />

        <TextView
            android:layout_width="234dp"
            android:layout_height="match_parent"
            android:text="Manual"
            android:textSize="22sp"
            android:textColor="#d4172d"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:id="@+id/textcontrol"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/linearLayout"
        android:layout_marginTop="50dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/line"
            android:layout_width="129dp"
            android:layout_height="120dp"
            android:src="@drawable/line" />

        <TextView
            android:layout_width="287dp"
            android:layout_height="0dp"
            android:text="Line Follower"
            android:textSize="22sp"
            android:textColor="#d4172d"
            android:layout_marginLeft="80dp"

            android:id="@+id/textline"
            android:layout_weight="8.92" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/linearLayout3"
        android:layout_marginTop="50dp"

        >

        <ImageView
            android:id="@+id/auto"
            android:layout_width="129dp"
            android:layout_height="120dp"
            android:src="@drawable/auto" />

        <TextView
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:text="Auto"
            android:textSize="22sp"
            android:textColor="#d4172d"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="15dp"
            android:id="@+id/textauto" />


    </LinearLayout>


</LinearLayout>